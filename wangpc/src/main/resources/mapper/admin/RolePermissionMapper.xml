<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wpc.admin.dao.RolePermissionDao" >
  	<resultMap id="BaseResultMap" type="com.wpc.admin.entity.RolePermission" >
    	<id column="id" property="id" />
	    <result column="role_id" property="roleId" />
	    <result column="permission_id" property="permissionId" />
  	</resultMap>
  
  	<sql id="table_columns" >
	    id,
	    role_id,
	    permission_id
  	</sql>
  	<sql id="entity_properties">
	  	#{id},
	  	#{roleId},
	  	#{permissionId}
  	</sql>
  
  	<insert id="save" parameterType="com.wpc.admin.entity.RolePermission">
	  	INSERT INTO role_permission ( <include refid="table_columns" /> ) 
	  	VALUES ( <include refid="entity_properties" /> )
  	</insert>
  
  	<delete id="delete" parameterType="Integer">
  		DELETE FROM role_permission 
  		WHERE id=#{id}
  	</delete>
  
  	<delete id="deleteByIds">
		DELETE FROM role_permission
		WHERE id IN
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
  	</delete>
  
  	<update id="update" parameterType="com.wpc.admin.entity.RolePermission">
	  	UPDATE role_permission 
	  	<trim prefix="set" suffixOverrides=",">
		  	<if test="roleId != null and roleId != ''">role_id = #{roleId},</if>
		  	<if test="permissionId != null and permissionId != ''">permission_id = #{permissionId},</if>
	  	</trim>
	  	<where>id=#{id}</where>
  	</update>
  
  	<select id="findById" resultMap="BaseResultMap" parameterType="Integer">
  		SELECT <include refid="table_columns"/> 
  		FROM role_permission 
  		WHERE id=#{id}
  	</select>
  	
  	<select id="queryAll" resultMap="BaseResultMap">
  		SELECT <include refid="table_columns"/> 
  		FROM role_permission 
  	</select>
  	
  	<sql id="page_where">
	  	<trim prefix="where" suffixOverrides="and | or ">
		  	<if test="roleId != null and roleId != ''">role_id = #{roleId}</if>
		  	<if test="permissionId != null and permissionId != ''">permission_id = #{permissionId}</if>
	  	</trim>
  	</sql>
  	
  	<select id="search" resultMap="BaseResultMap" parameterType="com.wpc.admin.entity.RolePermission">
  		SELECT <include refid="table_columns"/> 
  		FROM role_permission
  		<include refid="page_where" />
  	</select>
  	
  	<select id="page" resultMap="BaseResultMap" parameterType="com.wpc.admin.entity.RolePermission">
  		SELECT <include refid="table_columns"/> 
  		FROM role_permission
  		<include refid="page_where" />
  		LIMIT #{firstIndex},#{pageSize}
  	</select>
  
  	<select id="count" resultType="int" parameterType="com.wpc.admin.entity.RolePermission">
	  	SELECT COUNT(id) 
	  	FROM role_permission
	  	<include refid="page_where" />
  	</select>
  	
  	<!-- 其他自定义SQL -->
  	
</mapper>