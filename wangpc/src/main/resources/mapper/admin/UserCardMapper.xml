<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wpc.admin.dao.UserCardDao" >
  	<resultMap id="BaseResultMap" type="com.wpc.admin.entity.UserCard" >
    	<id column="id" property="id" />
	    <result column="name" property="name" />
	    <result column="age" property="age" />
	    <result column="update_time" property="updateTime" />
	    <result column="user_id" property="userId" />
  	</resultMap>
  
  	<sql id="table_columns" >
	    id,
	    name,
	    age,
	    update_time,
	    user_id
  	</sql>
  	<sql id="entity_properties">
	  	#{id},
	  	#{name},
	  	#{age},
	  	#{updateTime},
	  	#{userId}
  	</sql>
  
  	<insert id="save" parameterType="com.wpc.admin.entity.UserCard">
	  	INSERT INTO user_card ( <include refid="table_columns" /> ) 
	  	VALUES ( <include refid="entity_properties" /> )
  	</insert>
  
  	<delete id="delete" parameterType="Integer">
  		DELETE FROM user_card 
  		WHERE id=#{id}
  	</delete>
  
  	<delete id="deleteByIds">
		DELETE FROM user_card
		WHERE id IN
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
  	</delete>
  
  	<update id="update" parameterType="com.wpc.admin.entity.UserCard">
	  	UPDATE user_card 
	  	<trim prefix="set" suffixOverrides=",">
		  	<if test="name != null and name != ''">name = #{name},</if>
		  	<if test="age != null and age != ''">age = #{age},</if>
		  	<if test="updateTime != null and updateTime != ''">update_time = #{updateTime},</if>
		  	<if test="userId != null and userId != ''">user_id = #{userId},</if>
	  	</trim>
	  	<where>id=#{id}</where>
  	</update>
  
  	<select id="findById" resultMap="BaseResultMap" parameterType="Integer">
  		SELECT <include refid="table_columns"/> 
  		FROM user_card 
  		WHERE id=#{id}
  	</select>
  	
  	<select id="queryAll" resultMap="BaseResultMap">
  		SELECT <include refid="table_columns"/> 
  		FROM user_card 
  	</select>
  	
  	<sql id="page_where">
	  	<trim prefix="where" suffixOverrides="and | or ">
		  	<if test="name != null and name != ''">name = #{name}</if>
		  	<if test="age != null and age != ''">age = #{age}</if>
		  	<if test="updateTime != null and updateTime != ''">update_time = #{updateTime}</if>
		  	<if test="userId != null and userId != ''">user_id = #{userId}</if>
	  	</trim>
  	</sql>
  	
  	<select id="search" resultMap="BaseResultMap" parameterType="com.wpc.admin.entity.UserCard">
  		SELECT <include refid="table_columns"/> 
  		FROM user_card
  		<include refid="page_where" />
  	</select>
  	
  	<select id="page" resultMap="BaseResultMap" parameterType="com.wpc.admin.entity.UserCard">
  		SELECT <include refid="table_columns"/> 
  		FROM user_card
  		<include refid="page_where" />
  		LIMIT #{firstIndex},#{pageSize}
  	</select>
  
  	<select id="count" resultType="int" parameterType="com.wpc.admin.entity.UserCard">
	  	SELECT COUNT(id) 
	  	FROM user_card
	  	<include refid="page_where" />
  	</select>
  	
  	<!-- 其他自定义SQL -->
  	
</mapper>