<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wpc.admin.dao.MenuDao" >
  	<resultMap id="BaseResultMap" type="com.wpc.admin.entity.Menu" >
    	<id column="id" property="id" />
	    <result column="name" property="name" />
	    <result column="url" property="url" />
	    <result column="icon" property="icon" />
	    <result column="pId" property="pid" />
	    <result column="is_active" property="isActive" />
	    <result column="update_time" property="updateTime" />
  	</resultMap>
  
  	<sql id="table_columns" >
	    id,
	    name,
	    url,
	    icon,
	    pId,
	    is_active,
	    update_time
  	</sql>
  	<sql id="entity_properties">
	  	#{id},
	  	#{name},
	  	#{url},
	  	#{icon},
	  	#{pid},
	  	#{isActive},
	  	#{updateTime}
  	</sql>
  
  	<insert id="save" parameterType="com.wpc.admin.entity.Menu">
	  	INSERT INTO menu ( <include refid="table_columns" /> ) 
	  	VALUES ( <include refid="entity_properties" /> )
  	</insert>
  
  	<delete id="delete" parameterType="Integer">
  		DELETE FROM menu 
  		WHERE id=#{id}
  	</delete>
  
  	<delete id="deleteByIds">
		DELETE FROM menu
		WHERE id IN
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
  	</delete>
  
  	<update id="update" parameterType="com.wpc.admin.entity.Menu">
	  	UPDATE menu 
	  	<trim prefix="set" suffixOverrides=",">
		  	<if test="name != null and name != ''">name = #{name},</if>
		  	<if test="url != null and url != ''">url = #{url},</if>
		  	<if test="icon != null and icon != ''">icon = #{icon},</if>
		  	<if test="pid != null and pid != ''">pId = #{pid},</if>
		  	<if test="isActive != null and isActive != ''">is_active = #{isActive},</if>
		  	<if test="updateTime != null and updateTime != ''">update_time = #{updateTime},</if>
	  	</trim>
	  	<where>id=#{id}</where>
  	</update>
  
  	<select id="findById" resultMap="BaseResultMap" parameterType="Integer">
  		SELECT <include refid="table_columns"/> 
  		FROM menu 
  		WHERE id=#{id}
  	</select>
  	
  	<select id="queryAll" resultMap="BaseResultMap">
  		SELECT <include refid="table_columns"/> 
  		FROM menu 
  	</select>
  	
  	<sql id="page_where">
	  	<trim prefix="where" suffixOverrides="and | or ">
		  	<if test="name != null and name != ''">name = #{name}</if>
		  	<if test="url != null and url != ''">url = #{url}</if>
		  	<if test="icon != null and icon != ''">icon = #{icon}</if>
		  	<if test="pid != null and pid != ''">pId = #{pid}</if>
		  	<if test="isActive != null and isActive != ''">is_active = #{isActive}</if>
		  	<if test="updateTime != null and updateTime != ''">update_time = #{updateTime}</if>
	  	</trim>
  	</sql>
  	
  	<select id="search" resultMap="BaseResultMap" parameterType="com.wpc.admin.entity.Menu">
  		SELECT <include refid="table_columns"/> 
  		FROM menu
  		<include refid="page_where" />
  	</select>
  	
  	<select id="page" resultMap="BaseResultMap" parameterType="com.wpc.admin.entity.Menu">
  		SELECT <include refid="table_columns"/> 
  		FROM menu
  		<include refid="page_where" />
  		LIMIT #{firstIndex},#{pageSize}
  	</select>
  
  	<select id="count" resultType="int" parameterType="com.wpc.admin.entity.Menu">
	  	SELECT COUNT(id) 
	  	FROM menu
	  	<include refid="page_where" />
  	</select>
  	
  	<!-- 其他自定义SQL -->
  	
</mapper>